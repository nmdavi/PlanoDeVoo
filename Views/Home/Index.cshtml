@model  IEnumerable<PlanoDeVoo.Models.PlanoModels.Plano>
@{
    ViewBag.Title = "Home";
}

<h2>@ViewBag.Title</h2>
<br />
<table class="table table-striped table-bordered table-condensed table-hover auto">
    <thead>
        <tr>
            <th scope="col">Número do Voo</th>
            <th scope="col">Matrícula da Aeronave</th>
            <th scope="col">Data</th>
            <th scope="col">Tipo</th>
            <th scope="col">Origem</th>
            <th scope="col">Destino</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plano in Model)
        {
            <tr>
                <td>@Html.DisplayTextFor(x => plano.FK_Voo.NumeroVoo)</td>
                <td>@Html.DisplayTextFor(x => plano.FK_Aeronave.Matricula)</td>
                <td>@Html.DisplayTextFor(x => plano.FK_Voo.DataHorario)</td>
                <td>@Html.DisplayTextFor(x => plano.FK_Aeronave.Tipo)</td>
                <td>@Html.DisplayTextFor(x => plano.FK_Aeroporto.Sigla)</td>
                <td>@Html.DisplayTextFor(x => plano.FK_Aeroporto.Sigla)</td>
                @if (User.Identity.Name == frase.Autor || User.Identity.Name == "Administrador" ||
                    (frase.Autor == "Anônimo" && User.Identity.Name == "Administrador"))
                {
                    <td>
                        @Html.ActionLink("Editar", "AddEdit", "Home", new { id = frase.Id }, new { })
                        @Html.ActionLink("Deletar", "Delete", "Home", new { id = frase.Id }, new { })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>